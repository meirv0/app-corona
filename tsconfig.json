{
    "compilerOptions": {
        "target": "es2018",
        "module": "commonjs",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false,
        "baseUrl": ".",
        "outDir": "dist",
        "sourceMap": true,
        "inlineSources": true,
        "declaration": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "types": [
            "node"
        ]
    },
    "include": [
        "src/**/*",
        "src/**/*.json"
    ],
    "exclude": [
        "node_modules"
    ]
}